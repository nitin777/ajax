<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="pretty" width="100%">
  <tr>
    <th><%= sortable "name" %></th>
    <th><%= sortable "discount" %></th>
    <th><%= sortable "free_coupon" %></th>
    <th><%= sortable "min_purchase" %></th>

	<th><%= t("general.is_active") %></th>
	<th><%= t("general.actions") %></th>
  </tr>
  <% for o_row in @o_all %>
    <tr>
      <td><%= o_row.name %></td>
      <td><%= o_row.price %> %</td>
      <td><%= o_row.free_coupon %></td>
      <td><%= o_row.min_purchase %></td>
      <td><%= o_row.is_active ? image_tag("Yes.gif") : image_tag("No.gif") %></td>
      <td> <%= link_to image_tag("edit.png", :width => "16px", :height => "16px", :title => t("general.edit")), edit_coupon_path(o_row) %>
		   <%= link_to image_tag("delete.png", :width => "16px", :height => "16px", :title => t("general.destroy")), o_row, :confirm => t('general.are_you_sure_to_delete'), :method => :delete %>
		</td>
    </tr>
  <% end %>
</table>
<%= will_paginate @o_all %>
