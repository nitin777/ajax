<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="pretty" width="100%">
  <tr>
    <th><%= sortable "name" %></th>
    <th><%= sortable "email" %></th>
    <th><%= sortable "url" %></th>
	<th><%= t("general.actions") %></th>
  </tr>
  <% for o_row in @o_all %>
    <tr>
      <td><%= o_row.name %></td>
      <td><%= o_row.email %></td>
      <td><%= o_row.url %></td>
      <td> <%= link_to image_tag("edit.png", :width => "16px", :height => "16px", :title => t("general.edit")), edit_merchant_path(o_row) %>
		  <%= link_to image_tag("delete.png", :width => "16px", :height => "16px", :title => t("general.destroy")), o_row, :confirm => t('general.are_you_sure_to_delete'), :method => :delete %>
      <%= link_to image_tag("detail-icon.png", :width => "16px", :height => "16px", :title => t("general.merchant_details")), merchant_list_path(o_row.id) %>
		</td>
    </tr>
  <% end %>
</table>
<%= will_paginate @o_all %>
